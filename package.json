{
  "author": "Florian Imdahl <git@ffflorian.de>",
  "bin": {
    "electron-icon-generator": "dist/index.js"
  },
  "dependencies": {
    "commander": "10.0.0",
    "fs-extra": "11.1.0",
    "icon-gen": "3.0.1",
    "jimp": "0.16.2"
  },
