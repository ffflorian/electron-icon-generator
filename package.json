{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "electron-icon-generator": "dist/index.js"
  },
  "dependencies": {
    "commander": "4.1.0",
    "fs-extra": "8.1.0",
    "icon-gen": "2.0.0",
    "jimp": "0.9.3"
  },
  "description": "An icon generator to generate all the icon files needed for electron packaging",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.6",
    "@ffflorian/semantic-release-config": "0.2.0",
    "@ffflorian/tslint-config": "0.7.1",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "7.0.18",
    "@types/fs-extra": "8.0.1",
    "@types/icon-gen": "2.0.0",
    "@types/node": "12.12.24",
    "husky": "4.0.5",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "publish-flat": "1.3.4",
    "rimraf": "3.0.0",
    "semantic-release": "15.14.0",
    "ts-node": "8.6.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.1.0",
    "typescript": "3.7.4"
  },
  "engines": {
    "node": ">= 10.9"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/ffflorian/electron-icon-generator",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "electron",
    "icon",
    "icns",
    "png",
    "ico"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "spec/**/*.ts": [
      "tslint --project tsconfig.jasmine.json --fix",
      "git add"
    ],
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "name": "@ffflorian/electron-icon-generator",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/electron-icon-generator.git",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "flatten": "publish-flat -o flattened",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "prettier": "prettier \"*.{json,md}\"",
    "release": "semantic-release",
    "start": "ts-node src/cli.ts",
    "test": "exit 0"
  },
  "version": "1.0.1"
}
