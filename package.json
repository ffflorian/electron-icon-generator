{
  "author": "Florian Imdahl <git@ffflorian.de>",
  "bin": {
    "electron-icon-generator": "dist/index.js"
  },
  "dependencies": {
    "commander": "6.1.0",
    "fs-extra": "9.0.1",
    "icon-gen": "2.0.0",
    "jimp": "0.16.1"
  },
  "description": "An icon generator to generate all the icon files needed for electron packaging",
  "devDependencies": {
    "@ffflorian/eslint-config": "0.6.2",
    "@ffflorian/prettier-config": "0.1.2",
    "@ffflorian/semantic-release-config": "0.4.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/fs-extra": "9.0.1",
    "@types/icon-gen": "2.0.0",
    "@types/node": "~14",
    "@typescript-eslint/eslint-plugin": "4.0.0",
    "@typescript-eslint/parser": "3.10.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jasmine": "4.1.1",
    "eslint-plugin-jsdoc": "30.3.1",
    "eslint-plugin-no-unsanitized": "3.1.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "eslint-plugin-sort-keys-fix": "1.1.1",
    "eslint-plugin-typescript-sort-keys": "1.3.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "publish-flat": "1.4.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.1.1",
    "ts-node": "9.0.0",
    "typescript": "3.9.7"
  },
  "engines": {
    "node": ">= 10.9"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/ffflorian/electron-icon-generator",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "electron",
    "icon",
    "icns",
    "png",
    "ico"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "main": "dist/index.js",
  "name": "@ffflorian/electron-icon-generator",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/electron-icon-generator.git",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "flatten": "publish-flat -o flattened",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "eslint --ext .ts src/",
    "prettier": "prettier \"*.{json,md}\"",
    "release": "semantic-release",
    "start": "ts-node src/cli.ts",
    "test": "exit 0"
  },
  "version": "1.0.1"
}
