{
  "compilerOptions": {
    "declaration": true,
    "lib": ["dom", "es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["dist", "node_modules"]
}
